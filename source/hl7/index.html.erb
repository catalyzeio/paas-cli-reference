<%= partial "sections/header_index" %>
<div class="grid">
	<section class="r_submod-masthead">
		<h1 class="r_header-left">Catalyze HL7 Resources</h1>
		<form class="r_inline-search">
			<div class="r_search-wrapper">
				<label for="globalSearch">Search:</label>
				<input name="globalSearch" type="text" placeholder="Search all resources...">
				<span><i class="fa fa-search"></i></span>
			</div>
		</form>
	</section>
</div>
<section class="r_4up-cards">
	<div class="grid">
		<div class="r_card-row">
			<div class="col-1-4">
				<div class="r_main-card r_hl7-card">
					<header>
						<h1><a href="/hl7/faq">HL7</a></h1>
						<h2><a href="/hl7/faq"><i class="fa fa-info"></i> FAQ</a></h2>
					</header>
					<article>
						<div class="r_card-item">
							<p>This FAQ provides answers to common questions asked by both beginners and experts in the field.</p>
						</div>
						<a href="/hl7/faq" class="r_card-btn">View <i class="fa fa-caret-right"></i></a>
					</article>
				</div>
			</div>
		</div>
	</div>
</section>
<div class="grid">
	<section class="r_start-helper">
		<article class="r_small-grid">
			<div class="col-6-12">
				<div class="r_helper-inner">
					<h1>Not an HL7 User Yet?</h1>
					<p>Create your compliant mobile or web app with the Catalyze PaaS.</p>
					<a href="#" class="r_marketing-btn">Sign Up Now</a>
				</div>
			</div>
			<div class="col-6-12">
				<div class="r_helper-inner">
					<h1>HL7 Learn</h1>
					<p>This short guide will take from account creation to application setup.</p>
					<a href="#" class="r_marketing-btn">Get Started Now</a>
				</div>
			</div>
		</article>
	</section>
</div>
